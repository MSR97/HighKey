<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="movies"
            type="mohammadsajjad.magikey.model.Movies" />

    </data>


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام اثر : "
            android:textColor="@android:color/black"/>
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movies.name}" />

        <TextView
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:id="@+id/textViaew2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اطلاعات : " />
        <TextView
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movies.description}"/>


        <TextView
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:id="@+id/textViesadw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کلید واژه ها : "
            android:textColor="@android:color/holo_blue_dark"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/tvSentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movies.sentence}"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

        <TextView
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:id="@+id/textVasiaew2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="زمان : " />
        <TextView
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movies.time}" />

        <View
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="@color/colorAccent" />







    </LinearLayout>


</layout>
